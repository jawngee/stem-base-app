{
  "options": {
    // Turns on relative permalinks
    "relative-links": true,
    // Forces any absolute urls in the output to this
    "force-domain": false,
    // Configure the view engine
    "views": {
      // Which engine to use, either "twig" or "blade"
      "engine": "blade",

      // directory within your theme to cache views
      "cache": "cache/views"
    }
  },

  // Scripts and CSS to enqueue
  "enqueue": {
    "use-manifest": false,
    "manifest": "assets/manifest.json",
    // list the js files you want to enqueue
    "js": [
      "main.js"
    ],
    // list the css files you want to enqueue
    "css": [
      "main.css"
    ]
  },

  // WordPress theme options
  "support":{
    "automatic-feed-links": true,
    "title-tag": true,
    "post-thumbnails":{
      "width": 288,
      "height": 323,
      "crop": true
    },
    "html5":[
      "search-form",
      "comment-form",
      "comment-list",
      "gallery",
      "caption"
    ]
  },

  // Clean up generated HTML options
  "clean": {
    // Removes the following text and regexes from the final output
    "remove": {
      "text": [
        "<!-- /all in one seo pack -->"
      ],
      "regex": [
        "#<!-- All in One (.*) -->#",
        "#<!-- (.*)The Seo Framework(.*) -->#"
      ]
    },

    // Replaces the following text and regexes from the final output
    "replace": {
      "text": {
      },
      "regex": {
      }
    },

    // Unsets these actions
    "wp_head":[
      "rsd_link",
      "wlwmanifest_link",
      "wp_generator",
      "start_post_rel_link",
      "index_rel_link",
      "parent_post_rel_link",
      "adjacent_posts_rel_link_wp_head",
      "wp_shortlink_wp_head"
    ],

    // Removes these headers
    "headers":[
      "X-Pingback"
    ]
  },

  // Menu options
  "menu": {
    "primary": "Primary",
    "footer": "Footer",
    "social": "Social"
  },

  // Widget Areas
  "sidebars": {
    "sidebar-1": {
      "name": "Sidebar",
      "description": "Add widgets here to appear in your sidebar.",
      "before_widget": "<section id=\"%1$s\" class=\"widget %2$s\">",
      "after_widget": "</section>",
      "before_title": "<h2 class=\"widget-title\">",
      "after_title": "</h2>"
    },
    "sidebar-2": {
      "name": "Content Bottom 1",
      "description": "Appears at the bottom of the content on posts and pages.",
      "before_widget": "<section id=\"%1$s\" class=\"widget %2$s\">",
      "after_widget": "</section>",
      "before_title": "<h2 class=\"widget-title\">",
      "after_title": "</h2>"
    },
    "sidebar-3": {
      "name": "Content Bottom 1",
      "description": "Appears at the bottom of the content on posts and pages.",
      "before_widget": "<section id=\"%1$s\" class=\"widget %2$s\">",
      "after_widget": "</section>",
      "before_title": "<h2 class=\"widget-title\">",
      "after_title": "</h2>"
    }
  },

  // Customizer Panels
  "panels": {
    "stem-base-options": {
      "title": "Theme Options",
      "priority": 100
    }
  },

  // Customizer sections
  "sections": {
    "stem-base-colors": {
      "title": "Colors",
      "panel": "stem-base-options",
      "priority": 100
    },
    "stem-base-images": {
      "title": "Images",
      "panel": "stem-base-options",
      "priority": 100
    },
    "stem-base-misc": {
      "title": "Misc.",
      "panel": "stem-base-options",
      "priority": 100
    }
  },

  // Theme settings
  "settings": {
    "text_setting": {
      "default": "Hello World",
      "control": {
        "label": "Text Setting",
        "description": "Description",
        "section": "stem-base-misc",
        "type": "text"
      }
    },
    "cropped_image_setting": {
      "default": null,
      "control": {
        "label": "Cropped Image Setting",
        "section": "stem-base-misc",
        "type": "cropped_image"
      }
    },
    "media_setting": {
      "default": null,
      "control": {
        "label": "Media Setting",
        "section": "stem-base-misc",
        "type": "media"
      }
    },
    "border_color": {
      "default": "#000000",
      "control": {
        "label": "Border Color",
        "section": "stem-base-colors",
        "type": "color"
      }
    },
    "background_color": {
      "default": "#FFFFFF",
      "control": {
        "label": "Background Color",
        "section": "stem-base-colors",
        "type": "color"
      }
    },
    "text_color": {
      "default": "#000000",
      "control": {
        "label": "Text Color",
        "section": "stem-base-colors",
        "type": "color"
      }
    },
    "header_color": {
      "default": "#000000",
      "control": {
        "label": "Header Color",
        "section": "stem-base-colors",
        "type": "color"
      }
    },
    "link_color": {
      "default": "#1565c0",
      "control": {
        "label": "Anchor Color",
        "section": "stem-base-colors",
        "type": "color"
      }
    },
    "header_image": {
      "default": null,
      "control": {
        "label": "Header Image",
        "section": "stem-base-images",
        "type": "cropped_image"
      }
    },
    "background_image": {
      "default": null,
      "control": {
        "label": "Background Image",
        "section": "stem-base-images",
        "type": "image"
      }
    }
  }
}