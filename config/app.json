{
  // Note this JSON file contains comments and is technically invalid.
  // Stem will strip comments from this config before parsing.

  // Namespace for the theme
  "namespace": "\\StemeTheme\\Base",

  // Text domain
  "text-domain": "stem-theme-base",

  "options": {
    // Turns on relative permalinks
    "relative-links": true,
    // Forces any absolute urls in the output to this
    "force-domain": false,
    // Configure the view engine
    "views": {
      // Which engine to use, either "twig" or "internal"
      "engine": "blade",

      // directory within your theme to cache views
      "cache": "cache/views"
    }
  },

  // Configuration for logging
  "logging": {

    // For development environment
    "development": {

      // For debug AND GREATER error levels
      "debug": {
        // error_log()
        "phperror": {
          "format": {
            "output": "%level_name% > %message% %context%",
            "date": ""
          }
        },

        // console.log()
        "browser": {
        },

        // syslog
        "syslog": {
          "ident": "stem"
        }
      }
    },

    // For production environment
    "production": {
      // For error AND GREATER error levels
      "error": {
        // error_log()
        "phperror": {},

        // syslog via UDP
        "syslog_udp": {
          "host": "xx.papertrailapp.com",
          "port": "514"
        },

        // slack
        "slack": {
          "token" : "XXXXX",
          "channel": "mychannel",
          "username": "Stem",
          "useAttachment": true,
          "iconEmoji": false,

          // Every logger allows you to specify the format
          "format": {
            // This is required
            "output": "%datetime% > %level_name% > %message% %context% %extra%\n",
            // Optional
            "date": "Y n j, g:i a",
            // Optional, default is false
            "line-breaks" : true
          }
        }
      },

      // for emergency error levels
      "emergency": {
        "mail": {
          "to": "jon@interfacelab.com",
          "from": "donotreply@interfacelab.com",
          "subject": "Emergency on production"
        }
      }
    }
  },

  // Scripts and CSS to enqueue
  "enqueue": {
    "use-manifest": false,
    "manifest": "assets/manifest.json",
    // list the js files you want to enqueue
    "js": [
    ],
    // list the css files you want to enqueue
    "css": [
    ]
  },

  // WordPress theme options
  "support":{
    "automatic-feed-links": true,
    "title-tag": true,
    "post-thumbnails":{
      "width": 288,
      "height": 323,
      "crop": true
    },
    "html5":[
      "search-form",
      "comment-form",
      "comment-list",
      "gallery",
      "caption"
    ]
  },

  // Clean up generated HTML options
  "clean": {
    // Removes the following text and regexes from the final output
    "remove": {
      "text": [
      ],
      "regex": [
      ]
    },

    // Replaces the following text and regexes from the final output
    "replace": {
      "text": {
      },
      "regex": {
      }
    },

    // Unsets these actions
    "wp_head":[
      "rsd_link",
      "wlwmanifest_link",
      "wp_generator",
      "start_post_rel_link",
      "index_rel_link",
      "parent_post_rel_link",
      "adjacent_posts_rel_link_wp_head",
      "wp_shortlink_wp_head"
    ],

    // Removes these headers
    "headers":[
      "X-Pingback"
    ]
  },

  // search options
  "search-options":{
    // Post types to include in search
    "post-types":[
      "post"
    ]
  },

  // Menu options
  "menu": {
    "primary": "Primary",
    "footer": "Footer",
    "social": "Social"
  },

  // Page Controllers
  "controllers": {
  },

  // Custom post types to model map
  "model-map": {
  }
}